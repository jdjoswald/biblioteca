@page
@model Biblioteca.Pages.Libros.LibrosModel
@{
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<h1> Búsqueda por titulo</h1>
<form  method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" name="searchterm"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<a asp-page="./Librosedit" class="btn btn-dark">añadir libro</a>
<h1> Lista de libros</h1>
<table class="table">
    <tr>
        <th>Título</th>
        <th>Idioma</th>
        <th>Autor</th>
        <th>Estado</th>
    </tr>
    @foreach (var liibros in Model.libros)
    {

<tr>
    <td>@liibros.Titulo</td>
    <td>@liibros.Idioma</td>
    <td>@liibros.Serie</td>
    @if (@liibros.ID_estado == 1)
    {
        <td>no disponible</td>
    }
    @if (@liibros.ID_estado == 2)
    {
        <td>disponible</td>
    }

    <td>
        <a class=" btn btn-lg"
           asp-page="./detalles"
           asp-route-libroid="@liibros.ID_libro">
            <i class="fas fa-edit"></i>
        </a>
        <a class=" btn btn-lg"
           asp-page="./Librosedit"
           asp-route-libroid="@liibros.ID_libro">
            <i class="fas fa-pencil-alt"></i>
        </a>
    </td>
</tr>
    }
</table>
